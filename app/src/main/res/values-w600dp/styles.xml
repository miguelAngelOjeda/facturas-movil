<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="formEdit" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="label" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="resultado" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="searchButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:src">@mipmap/ic_search_dark</item>
        <item name="android:width">50dp</item>
        <item name="android:height">50dp</item>
    </style>

    <style name="area_header">
        <item name="android:background">#5ad76e</item>
        <item name="android:color">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
    </style>

    <style name="titulo">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="textoNormal">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="textoChico">
        <item name="android:textSize">14sp</item>
    </style>


    <style name="editTextNormal">
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="editTextDeshabilitado">
        <item name="android:textSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:enabled">false</item>
        <item name="android:textColor">@drawable/edit_text_selector</item>
    </style>

    <style name="botonAzul">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>

    </style>


</resources>
